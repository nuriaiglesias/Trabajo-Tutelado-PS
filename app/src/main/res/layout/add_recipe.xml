<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBarAddRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_baseline_arrow_back"
        android:layout_gravity="bottom"
        tools:ignore="BottomAppBar">

        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:fontFamily="cursive"
            android:text="@string/logo"
            android:textColor="@color/pink"
            android:textSize="40sp"
            android:textStyle="bold" />

    </com.google.android.material.bottomappbar.BottomAppBar>

    <LinearLayout
        android:layout_width="421dp"
        android:layout_height="527dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="25dp"
        tools:layout_editor_absoluteX="-10dp"
        tools:layout_editor_absoluteY="111dp">

        <EditText
            android:id="@+id/titleNewRecipe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/baseline_title_24"
            android:drawablePadding="8dp"
            android:hint="@string/titleNewRecipe"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background" />

        <EditText
            android:id="@+id/ingredientsNewRecipe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/baseline_fastfood_24"
            android:drawablePadding="8dp"
            android:hint="@string/ingredientsNewRecipe"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background" />

        <EditText
            android:id="@+id/instructionNewRecipe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/baseline_reorder_24"
            android:drawablePadding="8dp"
            android:hint="@string/instructionNewRecipe"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background" />

        <EditText
            android:id="@+id/titleImageNewRecipe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/baseline_image_search_24"
            android:drawablePadding="8dp"
            android:hint="@string/imageNewRecipe"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background" />

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectImage"
            android:backgroundTint="@color/pink"
            android:text="Select Image" />

        <Button
            android:id="@+id/addRecipe"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/pink"
            android:labelFor="@id/ingredientsNewRecipe"
            android:text="@string/addRecipeText"
            android:onClick="addRecipe"
            android:textSize="28sp" />

    </LinearLayout>

</LinearLayout>